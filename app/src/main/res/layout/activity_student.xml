<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:padding="20sp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#41a694"
        android:layout_gravity="center">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark">
        <TextView
                android:padding="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="STUDENT"
                android:textAlignment="center"
                android:textColorHint="#f9ffff"
                android:textSize="30sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Welcome,"
                android:textAlignment="center"
                android:textColorHint="#f9ffff"
                android:textSize="30sp"/>
        <TextView
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="STUDENT"
                android:textAlignment="center"
                android:textColorHint="#f9ffff"
                android:textSize="30sp"
                android:layout_marginBottom="60sp"/>
        <Button
                android:padding="19sp"
                android:id="@+id/reg_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D66501"
                android:hint="REGISTER ATTENDANCE"
                android:textSize="19sp"
                android:textColorHint="#f9ffff"
                android:layout_marginBottom="20sp"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"/>
        <Button
                android:padding="20sp"
                android:background="#D66501"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/today_attendance"
                android:text="VIEW TODAY'S ATTENDANCE"
                android:textSize="19sp"
                android:fontFamily="sans-serif"
                android:textColor="#f9ffff"
                android:layout_marginBottom="20sp"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"/>
        <Button
                android:padding="19sp"
                android:id="@+id/student_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D66501"
                android:hint="VIEW MONTHLY ATTENDANCE"
                android:textSize="19sp"
                android:textColorHint="#f9ffff"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="20sp"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"/>
        <Button
                android:padding="20sp"
                android:background="#D66501"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogout"
                android:hint="LOGOUT"
                android:textSize="19sp"
                android:fontFamily="sans-serif"
                android:textColorHint="#f9ffff"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"/>
    </LinearLayout>
</LinearLayout>