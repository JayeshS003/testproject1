<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:padding="20sp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#41a694"
        android:layout_gravity="center">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark">
        <TextView
                android:padding="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="STUDENT REGISTRATION"
                android:textAlignment="center"
                android:textColorHint="#f9ffff"
                android:textSize="25sp"
                android:layout_marginBottom="10sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SELECT COURSE"
                android:textColorHint="#f9ffff"
                android:textSize="20sp"
                android:layout_marginBottom="10sp"/>
        <Spinner
                android:id="@+id/course_option"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="#F7FFEC"
                android:layout_marginBottom="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/u_id"
                android:inputType="text"
                android:hint="USER-ID"
                android:textSize="20sp"
                android:textColorHint="#abffffff"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/first_name"
                android:inputType="text"
                android:hint="FIRSTNAME"
                android:textSize="20sp"
                android:textColorHint="#abffffff"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/last_name"
                android:inputType="text"
                android:hint="LASTNAME"
                android:textSize="20sp"
                android:textColorHint="#abffffff"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mobile_number"
                android:inputType="text"
                android:hint="MOBILE NUMBER"
                android:textSize="20sp"
                android:textColorHint="#abffffff"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:inputType="text"
                android:hint="ADDRESS"
                android:textSize="20sp"
                android:textColorHint="#abffffff"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:inputType="text"
                android:hint="E-MAIL"
                android:textSize="20sp"
                android:textColorHint="#abffffff"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:inputType="numberPassword"
                android:hint="PASSWORD"
                android:textSize="20sp"
                android:textColorHint="#abffffff"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10sp"/>
        <Button
                android:padding="15sp"
                android:background="#D66501"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_student"
                android:hint="REGISTER"
                android:fontFamily="sans-serif"
                android:textColor="#f9ffff"
                android:textSize="20sp"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10sp"/>
        <Button
                android:id="@+id/back"
                android:padding="15sp"
                android:background="#D66501"
                android:hint="BACK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textColor="#f9ffff"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"/>
    </LinearLayout>
</LinearLayout>